[core]
    # 改行コードをサーバー：LF, クライアント：CRLFになるように調整する
    # Windowsのみtrueにするか検討し、それ以外はfalseでいい
    autocrlf = false
    # UTF-8の日本語を文字化けせずに表示する
    quotepath = false
    ignorecase = false
    excludesfile = ~/.gitignore
[include]
    # ユーザー名などをGit管理しないローカルファイルに保持する
    path = ~/.gitconfig.local
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[color]
    # 出力に色を付ける
    ui = auto
[alias]
    a = add
    aa = add -A
    ap = add -p
    b = branch
    ba = branch -a
    bd = branch -d
    bm = branch -m
    c = commit
    cm = commit -m
    ca = commit --amend
    cl = clone
    df = diff
    dfc = diff --cached
    ft = fetch
    h = help
    lg = log
    lga = log --graph --pretty=format:\"%C(yellow)%h %C(green)%an %C(cyan)%ar%C(yellow)%d %Creset%s\"
    mr = merge
    ps = push
    psf = push -f
    rb = rebase
    rmc = rm --cached
    rmr = rm -r
    rmt = remote
    rmta = remote add
    rs = reset
    rsh = reset HEAD
    rt = restore
    rts = restore --source
    s = status
    ss = status -s
    sb = status -s -b
    st = stash
    stl = stash list
    sts = stash show
    stps = stash push
    stpsm = stash push -m
    stpp = stash pop
    stap = stash apply
    std = stash drop
    sw = switch
    swc = switch -c
    swd = switch --detach
    tg = tag
    v = version
[diff]
    # diffでリネームを検知する
    renames = true
[filter "hawser"]
    clean = git hawser clean %f
    smudge = git hawser smudge %f
    required = true
# diffで差分をハイライトする
# 参考：https://github.com/git/git/tree/master/contrib/diff-highlight
# 　　：https://udomomo.hatenablog.com/entry/2019/12/01/181404
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

